" Required:
filetype plugin indent on

set number

noremap ; :
noremap : ;

filetype indent on
filetype plugin on

syntax enable

set shiftwidth=4
set tabstop=4
set softtabstop=4
set expandtab

set t_Co=256

set wildmenu
set wildignore=*.o,*.pyc

" set ignorecase
set smartcase
set cursorline   " highlight the current line
set ttyfast      " faster redraw?
set showcmd

